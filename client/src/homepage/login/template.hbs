<h1>Login</h1>

<form class="form-horizontal" role="form">
  <div class="form-group col-md-8">
    <label for="login-username" class="control-label">User</label>
    <input id="login-username" name="username" type="text" class="form-control" placeHolder="Enter user name" value="{{username}}"/>
  </div>
  <div class="clearfix"></div>
  <div class="form-group col-md-8">
    <label for="login-password" class="control-label">Password</label>
    <input id="login-password" name="password"type="password" class="form-control" placeHolder="Enter password" value="{{password}}"/>
  </div>
  <div class="clearfix"></div>
  <div class="form-group col-md-12 text-right">
    <button class="form-cancel btn">Cancel</button>
    <button class="form-submit btn btn-default btn-primary">Login</button>
  </div>
  <div class="clearfix"></div>
</form>
