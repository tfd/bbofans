<h1>Reset password</h1>

<form class="form-horizontal" role="form">
  <input id="reset-currentPassword" name="currentPassword" type="hidden" class="form-control" value="{{currentPassword}}"/>

  <div class="form-group col-md-8">
    <label for="reset-newPassword" class="control-label">Password</label>
    <input id="reset-newPassword" name="newPassword" type="password" class="form-control" placeHolder="Enter password" />
  </div>
  <div class="clearfix"></div>
  <div class="form-group col-md-8">
    <label for="reset-repeatPassword" class="control-label">Re-enter Password</label>
    <input id="reset-repeatPassword" name="repeatPassword" type="password" class="form-control" placeHolder="Enter password again" />
  </div>
  <div class="clearfix"></div>

  <hr />

  <div class="form-group col-md-12 text-right">
    <button class="form-cancel btn">Cancel</button>
    <button class="form-submit btn btn-primary">Set password</button>
  </div>
  <div class="clearfix"></div>
</form>
