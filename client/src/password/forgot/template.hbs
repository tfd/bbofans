<h1>Recover Password</h1>

<form class="form-horizontal" role="form">
  <div class="form-group col-md-8">
    <label for="forgot-bboname" class="control-label">Enter BBO Name</label>
    <input id="forgot-bboname" name="bboName" type="text" class="form-control" placeHolder="Enter BBO name" value="{{bboName}}"/>
  </div>
  <div class="clearfix"></div>
  <div class="form-group col-md-8">
    <label for="forgot-email" class="control-label"><strong>or</strong> Email</label>
    <input id="forgot-email" name="email" type="text" class="form-control" placeHolder="Enter email" value="{{email}}"/>
  </div>
  <div class="clearfix"></div>
  <div class="clearfix"></div>
  <div class="form-group col-md-12 text-right">
    <button class="form-cancel btn">Cancel</button>
    <button class="form-submit btn btn-default btn-primary">Send</button>
  </div>
  <div class="clearfix"></div>
</form>
